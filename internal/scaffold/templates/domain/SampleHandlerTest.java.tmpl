package {{.BasePackage}}.core.handlers;

import {{.BasePackage}}.core.services.SampleDomainService;
import {{.BasePackage}}.interfaces.commands.SampleCommand;
import {{.BasePackage}}.interfaces.dtos.SampleDTO;
import org.junit.jupiter.api.Test;
import org.junit.jupiter.api.extension.ExtendWith;
import org.mockito.Mock;
import org.mockito.junit.jupiter.MockitoExtension;
import reactor.core.publisher.Mono;
import reactor.test.StepVerifier;

import java.util.UUID;

import static org.mockito.Mockito.when;

@ExtendWith(MockitoExtension.class)
class SampleHandlerTest {

    @Mock
    private SampleDomainService domainService;

    @Test
    void domainService_shouldProcess() {
        UUID id = UUID.randomUUID();
        SampleCommand command = SampleCommand.builder()
                .id(id)
                .name("test")
                .build();
        SampleDTO expected = new SampleDTO();
        expected.setId(id);

        when(domainService.process(command)).thenReturn(Mono.just(expected));

        StepVerifier.create(domainService.process(command))
                .expectNext(expected)
                .verifyComplete();
    }
}
